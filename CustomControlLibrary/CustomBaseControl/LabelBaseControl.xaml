<UserControl x:Class="CustomControlLibrary.CustomBaseControl.LabelBaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControlLibrary.CustomBaseControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Grid.Row="1" Grid.Column="1"
                   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=Foreground}"
                   FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontSize}"
                   FontFamily="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontFamily}"
                   Content="LabelBaseControl"/>
            <Image x:Name="topImageControl" Grid.Row="0" Grid.Column="1"/>
            <Image x:Name="leftImageControl" Grid.Row="1" Grid.Column="0"/>
            <Image x:Name="rightImageControl" Grid.Row="1" Grid.Column="2"/>
            <Image x:Name="bottomImageControl" Grid.Row="2" Grid.Column="1" Source="/CustomControlLibrary;component/Images/dsdnormalize.bmp"/>
        </Grid>
    </Grid>
</UserControl>
