<UserControl x:Class="CustomControlLibrary.Text.SingleLineTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bc="clr-namespace:CustomControlLibrary.CustomBaseControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <bc:BaseTextBoxControl Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
    </bc:BaseTextBoxControl>
</UserControl>
