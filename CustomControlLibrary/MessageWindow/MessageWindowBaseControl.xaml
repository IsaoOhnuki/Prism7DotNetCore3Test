<UserControl x:Class="CustomControlLibrary.MessageWindow.MessageWindowBaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bc="clr-namespace:CustomControlLibrary.CustomBaseControl"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <bc:DialogPanerBaseControl Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2"/>
        <bc:TitlePanelBaseControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <bc:MessageTextBaseControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,20,20,20"/>
        <bc:DialogButtonBaseControl Grid.Row="2" Grid.Column="0"/>
        <bc:DialogButtonBaseControl Grid.Row="2" Grid.Column="1"/>
    </Grid>
</UserControl>
